<div class="edit-title">Correct answer</div>
<div class="options">
    <label class="option">
    {{input checked=source.use_re
          type="checkbox"
          required="true"}}
    Use regular expressions
    </label>

    <label class="option">
        {{input checked=source.match_substring
              type="checkbox"
              required="true"}}
        Match Substring
    </label>

    <label class="option">
        {{input checked=source.case_sensitive
              type="checkbox"
              required="true"}}
        Case sensitive
    </label>
</div>
<div class="edit-text">
    {{input value=source.pattern
          type="text"
          required="true"}}
</div>



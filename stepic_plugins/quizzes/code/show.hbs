{{#if is_lang_selectable}}
  <b>Choose your language:</b>
  {{#each lang in langs}}
    <button class="tiny" {{action setLang lang}}>{{lang}}</button>
  {{/each}}
{{else}}
  <label>
    {{input type="file" class="code-quiz__load"
      value=file_value}}
    <span class="button">Load file</span>
  </label>
  {{view App.CodeEditorView
  valueBinding='user_code'
  required='true'
  langBinding='user_lang'
  placeholder="Type your code here..."
  disabledBinding='disabled'}}
{{/if}}

<table border="0" align="center">
<tr>
<th>
{{simple-render
      text=dataset.name_rows
      class="option__text"}}
</th>

{{#each column in dataset.columns}}
  <th>
  {{simple-render
        text=column
        class="option__text"}}
  </th>
{{/each}}
</tr>

{{#with picker_view as picker_view}}
  {{#each row in dataset.rows}}
    <tr>
    <td>
    {{simple-render
        text=row
        class="option__text"}}
    </td>
    {{#each column in dataset.columns}}
      <td>
      {{view picker_view
          name=row
          checkedBinding=column
          class="option__input"}}
      </td>
    {{/each}}
    </tr>
  {{/each}}
{{/with}}
</table>
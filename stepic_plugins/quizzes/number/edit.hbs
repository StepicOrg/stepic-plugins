<div class="edit-block">
    <div class="edit-title">Correct answer</div>
    <div class="edit-text">
        {{input value=source.answer
              type="number"
              class="ember-text-field"
              required="true"}}
    </div>
</div>
<div class="edit-block">
    <div class="edit-title">Tolerated error</div>
    <div class="edit-text">
        {{input value=source.max_error
              type="number"
              class="ember-text-field"
              required="true"}}
    </div>
</div>

{{#each source.options as |option|}}
  <div>
    <div class="edit-block">
      <div class="edit-title">Correct answer</div>
      <div class="edit-text">
        {{input value=option.answer
                class="ember-text-field"
                required="true"}}
      </div>
    </div>
    <div class="edit-block">
      <div class="edit-title">Tolerated error</div>
      <div class="edit-text">
        {{input value=option.max_error
                class="ember-text-field"
                required="true"}}
      </div>
    </div>
  </div>
  <hr>
{{/each}}
<div class="number-quiz__buttons-block edit-block">
  <div class="edit-title">Add/Remove a correct answers</div>
  <div title="Add one more answer option" class="number-quiz__options-button
    number-quiz__options-button_add" {{action "addOption"}}>
  </div>
  {{#if (gt source.options.length 1)}}
    <div title="Delete the last answer option" class="number-quiz__options-button
      number-quiz__options-button_delete" {{action "removeOption"}}>
    </div>
  {{/if}}
</div>
